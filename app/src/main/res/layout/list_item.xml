<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/sentItemImage"
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:contentDescription="Property Image"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/sentItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/sentItemImage"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sentItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sentItemName"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:layout_toEndOf="@id/sentItemImage"
            android:text="Type" />

        <TextView
            android:id="@+id/sentItemEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sentItemType"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/sentItemImage"
            android:text="Email" />

        <TextView
            android:id="@+id/sentItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sentItemEmail"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/sentItemImage"
            android:text="Location" />
        <TextView
            android:id="@+id/sentItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sentItemLocation"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/sentItemImage"
            android:text="Description" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>